<h2><%= @twitter_client.user.screen_name %>'s Twitter feed</h2>
<%= image_tag @twitter_client.user.profile_image_url %>
<% @tweets.each do |tweet| %>
  <section class="grid_4 tweet">
    <header class="tweet-header">
      <h2><%= tweet.user.screen_name  %></h2>
      <%= image_tag tweet.user.profile_image_url  %>
    </header>
    <div class="tweet-content">
      <p><%= tweet.text %></p>
      <div class="tweet-media">
        <% if tweet.media? %>
          <% for media in tweet.media %>
            <%= image_tag media.media_url, class: 'tweet-image'  %>
          <% end %>
        <% end %>
      </div>
      <div>
        <% if tweet.hashtags? %>
          <% tweet.hashtags.each do |hashtag| %>
            <%= '#' + hashtag.text  %>
          <% end %>
        <% end %>
      </div>
      <div>
        <% if tweet.urls? %>
          <% tweet.urls.each do |url| %>
            <%= link_to url.attrs.values[0],url.attrs.values[0]  %>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>
<% end %>


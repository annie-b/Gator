<h1>Facebook</h1>

<% @provider = AuthenticationProvider.find_by_name('facebook') %>
<% @auth = UserAuthentication.find_by_authentication_provider_id(@provider.id) %>
<% @client = Facebook.new(@auth.token) %>
<% @client.get_info.each do |key, value|  %>
  <ul>
      <li><%= key %>: <%= value %></li>
  </ul>  
<% end %>